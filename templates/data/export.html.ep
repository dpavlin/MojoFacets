% layout 'default';

<ul>
% foreach my $e ( @$export ) {
%  my $path = $e; $path =~ s{^.+/public/export/}{};
<li>
<tt>
<a target="<%= $path %>" href="/export/<%= $path %>"><%= $path %></a>
</tt>
<%= -s $e %> bytes
%  if ( $path =~ m/\.png$/ ) {
<img src="/export/<%= $path %>">
%  } else {
<a href="?import=<%= $path %>">import</a>
%  }
% }
</ul>

<pre class=debug><%= dumper $export %></pre>
