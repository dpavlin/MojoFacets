% layout 'default';
<h2>Select data file to load</h2>

<form method=post action=/data/load >

<ul>
% my $current = session('path');
% foreach my $n ( @$files ) {
<li>
<label>
%  if ( $n eq $current ) {
<input type=radio disabled> <b><%= $n %></b>
%  } else {
<input type=radio name=path value=<%= $n %> > <%= $n %>
%  }
</label>
% }
</ul>

<input type=submit value="Load">

</form>
